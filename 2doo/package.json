{
  "name": "2doo",
  "version": "1.1.0",
  "private": true,
  "main": "main.js",
  "homepage": ".",
  "description": "ToDo List Desktop App",
  "author": "ayoub",
  "scripts": {
    "start": "concurrently \"react-scripts start\" \"wait-on http://localhost:3000 && cd ../2do_tests && pytest\"",
    "start-only": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "package": "npm run build && electron-builder",
    "test": "cd ../2do_tests && pytest"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^26.2.1",
    "electron-builder": "^23.6.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.youba.2doo",
    "productName": "2DOO",
    "icon": "public/icon.ico",
    "files": [
      "build/**/*",
      "main.js"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}